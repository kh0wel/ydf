{
  "formatter": {
    "enabled": true,
    "indentSize": 4,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "noInferrableTypes": "off"
      },
      "suspicious": {
        "noRedeclare": "off",
        "noExplicitAny": "off",
        "noEmptyInterface": "off"
      }
    }
  }
}
